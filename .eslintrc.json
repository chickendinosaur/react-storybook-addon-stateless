{
	"extends": [
    "airbnb"
  ],
	"root": true,
	"env": {
		"browser": true,
		"node": true,
    "es6": true
	},
	"ext": [
		".js",
		".jsx",
		".html"
	],
  "parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
    "react",
    "jsx-a11y",
		"import",
		"html"
	],
	"rules": {
    "import/no-extraneous-dependencies": 0,
    "arrow-body-style": ["error", "always"],
    "arrow-parens": ["error", "always"],
    "no-underscore-dangle": 0,
    "no-console": 0,
    "func-names": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "jsx-a11y/img-has-alt": 0,
    "react/prop-types": 0
  }
}
